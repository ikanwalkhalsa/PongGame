#:kivy 1.10.1
<Base>:
    p1sc:p1score
    p2sc:p2score
    ball:pball
    p1:p1pdl
    p2:p2pdl
    canvas:
        Color:
            rgba: 0.3,0.6,0.7,1
        Rectangle:
            size:self.width,self.height
        Color:
            rgba:1,1,1,1
        Rectangle:
            size:self.width,10
            pos:0,self.center_y
        Ellipse:
            size:self.width,self.height/2
            pos:0,self.height-self.height/4
        Ellipse:
            size:self.width,self.height/2
            pos:0,self.height-(self.height+self.height/4)
        Color:
            rgba: 0.3,0.4,0.5,1
        Ellipse:
            size:self.width-10,self.height/2-10
            pos:5,(self.height-self.height/4)+5
        Ellipse:
            size:self.width-10,self.height/2-10
            pos:5,self.height-(self.height+self.height/4)+5
    Label:
        id:p1score
        text:"0"
        font_size:70
        center_x:root.center_x
        center_y:root.height/3
    Label:
        id:p2score
        text:"0"
        font_size:70
        center_x:root.center_x
        center_y:root.height-root.height/3
    PongBall:
        id:pball
        center:self.parent.center
    Paddle:
        id:p1pdl
        center_x:root.center_x
        y:10
    Paddle:
        id:p2pdl
        center_x:root.center_x
        top:root.top-10
<PongBall>:
    id:pball
    size:50,50
    canvas:
        Color:
            rgba:1,0,1,1
        Ellipse:
            size:self.size
            pos:self.pos
<Paddle>:
    size:100,10
    canvas:
        Color:
            rgba:0.3,0.8,0.9,1
        Rectangle:
            pos:self.pos
            size:self.size